FROM golang:1.25.5-alpine AS builder

WORKDIR /app

# Install git only if needed for private modules
RUN apk add --no-cache git

# Dependency caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source
COPY . .

# Build static binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build -ldflags="-w -s" \
    -o payment-api-service cmd/main.go


RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 \
    go build -ldflags="-w -s" -o payment-api-migrate cmd/migrate/main.go

FROM scratch

COPY --from=builder /app/payment-api-service /payment-api-service
COPY --from=builder /app/payment-api-migrate /payment-api-migrate

# Document port
EXPOSE 8004

# Run service
ENTRYPOINT ["/payment-api-service"]
